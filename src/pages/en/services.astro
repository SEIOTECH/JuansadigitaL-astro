---
import { t } from 'i18n:astro'
import Layout from '@layouts/Layout.astro'

const { title: servicesTitle, jobs } = t('experience', {
  returnObjects: true
})

const { jobs_description: services } = jobs

const options = {
  title: `${servicesTitle} | JuansaDigital`,
  description: t('common:description')
}
---

<Layout options={options}>
  <main>
    <section class="services-hero">
      <h1>{servicesTitle}</h1>
      <p>{t('common:description')}</p>
    </section>

    <div class="services-grid">
      {
        services.map((service) => (
          <article class="service-card">
            <div class="service-content">
              <h3>{service.title}</h3>
              <p>{service.description}</p>
              <ul>
                {service.list.map((item) => (
                  <li>{item}</li>
                ))}
              </ul>
            </div>
          </article>
        ))
      }
    </div>
  </main>
</Layout>

<style>
  main {
    max-width: 1054px;
    margin-inline: auto;
    padding-inline: var(--mobile-inline-padding);
    padding-block: 80px;

    @media (width >= 1200px) {
      padding-inline: 0;
    }
  }

  .services-hero {
    text-align: center;
    margin-bottom: 64px;

    & h1 {
      margin-bottom: 24px;
    }

    & p {
      color: var(--text-description-color);
      font-size: 1.25rem;
      max-width: 800px;
      margin-inline: auto;
    }
  }

  .services-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 32px;

    @media (width >= 768px) {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    background-color: var(--bg-secondary-color);
    border: 1px solid var(--border-color);
    border-radius: var(--radius);
    padding: 40px;
    display: flex;
    flex-direction: column;
    transition:
      transform 0.3s ease,
      border-color 0.3s ease;

    &:hover {
      transform: translateY(-8px);
      border-color: var(--text-color);
    }

    & h3 {
      margin-bottom: 16px;
      color: var(--text-color);
    }

    & p {
      color: var(--text-description-color);
      margin-bottom: 24px;
      line-height: 1.6;
    }

    & ul {
      margin-top: auto;
      padding-left: 20px;
      color: var(--text-description-color);

      & li {
        margin-bottom: 8px;
        font-size: 0.95rem;

        &::marker {
          color: var(--text-color);
        }
      }
    }
  }
</style>
