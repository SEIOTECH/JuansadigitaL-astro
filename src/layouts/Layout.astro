---
import I18NHead from '@astrolicious/i18n/components/I18nHead.astro'
import inter from '@fontsource-variable/inter/files/inter-latin-standard-normal.woff2'
import { Schema } from 'astro-seo-schema'
import { getHtmlAttrs } from 'i18n:astro'
import Favicons from '@components/Favicons.astro'
import Footer from '@components/Footer.astro'
import Navbar from '@components/Navbar.astro'
import Social from '@components/Social.astro'
import WhatsAppButton from '@components/WhatsAppButton.astro'
import SEO from '@components/SEO.astro'
import 'sanitize.css'
import 'sanitize.css/assets.css'
import 'sanitize.css/typography.css'
import '@styles/global.css'

interface Options {
  title: string
  description: string
  metaRobots?: string
  image?: string
}

interface Props {
  options: Options
}

const { options } = Astro.props
const { title, description, metaRobots } = options
---

<!doctype html>
<html {...getHtmlAttrs()}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Tag Manager -->
    <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-PJLQN2L');</script>
    <!-- End Google Tag Manager -->

    <title>{title}</title>

    <slot name="preconnect" />

    <slot name="async-script" />

    <slot name="critical-css" />

    <style is:inline>
      :root {
        --scrollbar: #e5e5e5;
        --scrollbar-thumb: #c0c0c0;
        --scrollbar-thumb-hover: #909090;
        --scrollbar-dark: #898989;
        --scrollbar-thumb-dark: #5d5d5d;
        --scrollbar-thumb-hover-dark: #3f3f3f;
      }

      @view-transition {
        navigation: auto;
      }

      body::-webkit-scrollbar {
        width: 7px;
        height: 7px;
        background: var(--scrollbar);
        transition: background 150ms cubic-bezier(0.4, 0, 0.2, 1);
        will-change: background;
      }

      body::-webkit-scrollbar-thumb {
        background: var(--scrollbar-thumb);
        border-radius: 0.25rem;
        background-color: var(--scrollbar-thumb);
      }

      @media (any-hover: hover) {
        body::-webkit-scrollbar-thumb:hover {
          background: var(--scrollbar-thumb-hover);
        }
      }

      html.dark body::-webkit-scrollbar {
        background: var(--scrollbar-dark);
        transition: background 150ms cubic-bezier(0.4, 0, 0.2, 1);
        will-change: background;
      }

      html.dark body::-webkit-scrollbar-thumb {
        background: var(--scrollbar-thumb-dark);
      }

      @media (any-hover: hover) {
        html.dark body::-webkit-scrollbar-thumb:hover {
          background: var(--scrollbar-thumb-hover-dark);
        }
      }

      @supports not selector(::-webkit-scrollbar) {
        html,
        body {
          scrollbar-color: var(--scrollbar) var(--scrollbar-thumb);
          scrollbar-width: thin;
          scrollbar-gutter: stable;
        }

        html.dark,
        html.dark body {
          scrollbar-color: var(--scrollbar-dark) var(--scrollbar-thumb-dark);
        }
      }
    </style>

    <slot name="stylesheet" />

    <link
      rel="preload"
      as="font"
      crossorigin="anonymous"
      href={inter}
      type="font/woff2"
    />

    <script is:inline>
      // In this project, 'dark' class means Light Mode (white background)
      const getThemePreference = () => {
        if (
          typeof localStorage !== 'undefined' &&
          localStorage.getItem('dark-theme')
        ) {
          return localStorage.getItem('dark-theme') === 'true'
        }
        return window.matchMedia('(prefers-color-scheme: light)').matches
      }

      if (getThemePreference()) {
        document.documentElement.classList.add('dark')
      } else {
        document.documentElement.classList.remove('dark')
      }
    </script>

    <SEO
      title={title}
      description={description}
      image={options.image}
    />

    <slot name="preload" />

    <slot name="defer-script" />

    <meta name="robots" content={metaRobots || 'index, follow'} />
    <I18NHead />
    <meta name="author" content="JuansaDigital - https://juansadigital.com" />
    <meta name="generator" content={Astro.generator} />

    {
      description && (
        <Schema
          item={{
            '@context': 'https://schema.org',
            '@type': 'Organization',
            name: 'JuansaDigital',
            url: 'https://juansadigital.com',
            logo: 'https://juansadigital.com/logo.png',
            sameAs: [
              'https://www.linkedin.com/company/juansadigital',
              'https://github.com/jpmisat'
            ],
            description
          }}
        />
      )
    }

    <slot name="schema" />

    <Favicons />

    <slot name="social-media" />
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-PJLQN2L"
    height="0" width="0" style="display:none;visibility:hidden" title="GTM"></iframe></noscript>
    <!-- End Google Tag Manager (noscript) -->
    <Navbar />

    <slot />

    <Footer />

    <Social />
    <WhatsAppButton />
    <slot name="dynamic-components" />
  </body>
</html>
